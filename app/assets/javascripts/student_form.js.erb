$(document).ready(function() {
  var count = "1000";

  $studentForm = $('.add-student-form a')

  $studentForm.on('click', function () {
    $studentForm.after("<input id='afterschool_class_students_attributes_"+count+"_last_name' name='afterschool_class[students_attributes]["+count+"][last_name]' placeholder='Last Name' size='30' type='text'>")
    $studentForm.after("<label for='afterschool_class_students_attributes_"+count+"_last_name'>Last Name</label>")
    $studentForm.after("<input id='afterschool_class_students_attributes_"+count+"_first_name' name='afterschool_class[students_attributes]["+count+"][first_name]' placeholder='First Name' size='30' type='text'>")
    $studentForm.after("<label for='afterschool_class_students_attributes_"+count+"_first_name'>First Name</label>")
    $studentForm.after("<h4>Student</h4>")

    count = parseInt(count) + 1
  });
});